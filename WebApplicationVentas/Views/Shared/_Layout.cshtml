                </li>


                <li class="nav-item">
                    <a class="nav-link collapsed" asp-action="Index" asp-controller="Usuarios">
                        <i class="bi bi-people"></i>
                        <span>Usuarios</span>
                    </a>
                </li>

            }
            @if (user)
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-action="Index" asp-controller="Productos">
