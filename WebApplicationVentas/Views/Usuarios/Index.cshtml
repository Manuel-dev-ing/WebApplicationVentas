@model UsuariosModel

@{
	ViewData["Title"] = "Usuarios";
}

<div class="pagetitle">
	<h1>Usuarios</h1>

</div><!-- End Page Title -->
<!-- Modal -->
<partial name="_ModalRegistrosInactivosUsuarios" model="Model.usuariosInactivos" />
<!-- Fin Modal -->


<a class="btn btn-outline-primary btn-sm mb-4" asp-action="Crear" asp-controller="Usuarios" title="Crear nuevo usuario">Nuevo Usuario</a>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <input type="search" class="form-control" placeholder="buscar" id="buscar" />
    </div>

</div>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <a class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Ver Registros Inactivos</a>

    </div>

</div>

<table class="table table-bordered table-hover table-responsive mb-5 table-sm">
    <thead class="cabecera-tabla">
        <tr>
            <th></th>
            <th>Rol</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo</th>
            <th>Telefono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.usuariosActivos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NombreRol</td>
                <td>@item.Nombre</td>
                <td>@item.Apellidos</td>
                <td>@item.Correo</td>
                <td>@item.Telefono</td>
                <td>

                    <a class="btn btn-sm btn-outline-warning" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Usuarios" title="Editar"><i class="bi bi-pencil"></i></a>
                    <a class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id" asp-action="Eliminar" asp-controller="Usuarios" title="Eliminar"><i class="bi bi-trash"></i></a>

                </td>

            </tr>
        }
    </tbody>
</table>










