
@model ClientesModel

@{
    ViewData["Title"] = "Clientes";
}


<div class="pagetitle">
    <h1>Clientes</h1>

</div><!-- End Page Title -->

<!-- Modal -->
<partial name="_ModalRegistrosInactivosClientes" model="Model.clientesInactivos" />
<!-- Fin Modal -->

<a class="btn btn-outline-primary btn-sm mb-4" asp-action="Crear" asp-controller="Clientes" title="Crear nueva categoria">Nuevo Cliente</a>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <input type="search" class="form-control" placeholder="buscar..." id="buscar" />
    </div>

</div>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <a class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Ver Registros Inactivos</a>

    </div>

</div>


<table class="table table-bordered table-hover table-responsive mb-5 table-sm">
    <thead class="cabecera-tabla">
        <tr>
            <th></th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Calle</th>
            <th>Colonia</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.clientesActivos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Apellidos</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <td>@item.Calle</td>
                <td>@item.Colonia</td>
                <td>
                    <a class="btn btn-sm btn-outline-warning" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Clientes" title="Editar"><i class="bi bi-pencil"></i></a>
                    <a class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id" asp-action="Eliminar" asp-controller="Clientes" title="Eliminar"><i class="bi bi-trash"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>








