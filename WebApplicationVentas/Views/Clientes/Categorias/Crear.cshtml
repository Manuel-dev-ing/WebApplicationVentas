@model CategoriaViewModel
@{
    ViewData["Title"] = "Crear Categorias";
}


<div class="pagetitle">
    <h1>Crear Categoria</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Categorias">Home</a></li>
            <li class="breadcrumb-item active">Crear Categoria</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<a class="btn btn-outline-primary btn-sm mb-4" asp-action="Index" asp-controller="Categorias">Regresar</a>


<div class="col-lg-10">

    <div class="card">
        <div class="card-body">

            <!-- Vertical Form -->
            <form class="row g-3 mt-3" asp-action="Guardar" asp-controller="Categorias">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-12">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" type="text" class="form-control">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="reset" class="btn btn-secondary">Restablecer</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

