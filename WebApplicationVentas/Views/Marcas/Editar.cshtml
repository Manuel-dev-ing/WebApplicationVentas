@model MarcasViewModel


@{

    ViewData["Title"] = "Editar Marca";

}

<div class="pagetitle">
    <h1>Editar Marca</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Marcas">Home</a></li>
            <li class="breadcrumb-item active">editar marca</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<a class="btn btn-outline-primary btn-sm mb-4" asp-action="Index" asp-controller="Marcas">Regresar</a>


<div class="col-lg-10">

    <div class="card">
        <div class="card-body">

            <!-- Vertical Form -->
            <form class="row g-3 mt-3" asp-action="Actualizar" asp-controller="Marcas">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" />

                <div class="col-12">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" type="text" class="form-control">
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="col-12 mt-1">
                    <div class="form-check form-switch">
                        <input asp-for="EsActivo" class="form-check-input" type="checkbox">
                        <label asp-for="EsActivo" class="form-check-label"></label>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="reset" class="btn btn-secondary">Restablecer</button>
                </div>
            </form>

        </div>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





