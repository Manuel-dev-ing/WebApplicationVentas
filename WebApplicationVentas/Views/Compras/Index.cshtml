@{
    ViewData["Title"] = "Consultar Compras";
}

<div class="pagetitle">
    <h1>Consultar Compras</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Home</a></li>
            <li class="breadcrumb-item active">Consultar Compras</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div id="alerta">
    
</div>

<div class="row">

    <div class="col-lg-12 d-flex align-items-center gap-3">

        <div class="col-md-5 d-flex align-items-center gap-2">
            <label class="form-label">Desde: </label>
            <input type="date" class="form-control" id="fechaInicio" />
        </div>
        <div class="col-md-5 d-flex align-items-center gap-2">
            <label class="form-label">Hasta: </label>
            <input type="date" class="form-control" id="fechaFin" />
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" id="btnBuscar" disabled>Buscar</button>
        </div>

    </div>

    <div class="col-lg-12 mt-5" id="contenedor-tabla">
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Detalle Venta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex mb-1">

                    <div class="ms-auto p-2">
                        <input type="search" class="form-control" placeholder="buscar" id="buscar" />
                    </div>

                </div>

                <table class="table table-bordered table-hover table-responsive mb-5 table-sm">
                    <thead class="cabecera-tabla">
                        <tr>
                            <th></th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="tbody-detalle-compra">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/consultarCompras.js"></script>
}

