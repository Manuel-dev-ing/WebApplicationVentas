@model ProductosModel

@{
    ViewData["Title"] = "Productos";
}

<div class="pagetitle">
    <h1>Productos</h1>

</div><!-- End Page Title -->

<!-- Modal -->
<partial name="_ModalRegistrosProductosInactivos" model="Model.ProductosInactivos" />
<!-- Fin Modal -->

<a class="btn btn-outline-primary btn-sm mb-4" asp-action="Crear" asp-controller="Productos" title="Crear nuevo producto">Nuevo Producto</a>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <input type="search" class="form-control" placeholder="buscar" id="buscar" />
    </div>

</div>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <a class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Ver Registros Inactivos</a>

    </div>

</div>

<table class="table table-bordered table-hover table-responsive mb-5 table-sm">
    <thead class="cabecera-tabla">
        <tr>
            <th></th>
            <th>Marca</th>
            <th>Categoria</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Fecha Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductosActivos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Marca</td>
                <td>@item.Categoria</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio</td>
                <td>@item.Fecha</td>
                <td>
                    <a class="btn btn-sm btn-outline-warning" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Productos" title="Editar"><i class="bi bi-pencil"></i></a>
                    <a class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id" asp-action="Eliminar" asp-controller="Productos" title="Eliminar"><i class="bi bi-trash"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>




