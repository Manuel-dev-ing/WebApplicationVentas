@model AlmacenesModel
@{
    ViewData["Title"] = "Listado de Almacemes";
}

<div class="pagetitle">
    <h1>Almacenes</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Almacenes</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<br />

<!-- Modal -->
<partial name="_ModalRegistrosInactivos" model="Model.AlmaceesInactivos" />
<!-- Fin Modal -->

<a class="btn btn-outline-primary btn-sm mb-4" asp-action="Crear" asp-controller="Almacenes" title="Crear nuevo almacen">Nuevo Almacen</a>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <input type="search" class="form-control" placeholder="buscar" id="buscar" />
    </div>

</div>

<div class="d-flex mb-1">

    <div class="ms-auto p-2">
        <a class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Ver Registros Inactivos</a>

    </div>

</div>


<table class="table table-bordered table-hover table-responsive mb-5 table-sm">
    <thead class="cabecera-tabla">
        <tr>
            <th></th>
            <th>Nombre</th>
            <th>Fecha Registro</th>
            <th>Acciones</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AlmaceesActivos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.FechaRegistro</td>
                <td>
                    <a class="btn btn-sm btn-outline-warning" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Almacenes" title="Editar"><i class="bi bi-pencil"></i></a>
                    <a class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id" asp-action="Eliminar" asp-controller="Almacenes" title="Eliminar"><i class="bi bi-trash"></i></a>
                </td>
               
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    
   
}

